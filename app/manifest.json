{
  "manifest_version": 2,
  "name": "Betterment CSV export",
  "version": "0.0.1",

  "icons": {
    "128": "images/icon128.png"
  },

  "description": "Export ticker-level transaction data from Betterment.com as CSV files",
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://wwws.betterment.com/app*"],
      "js": [        
        "libs/patch-worker.js",
        "libs/pdf.js",
        "libs/mutation-summary.js",
        "libs/jquery-2.2.0.min.js",
        "src/transactions-to-csv.js",
        "src/betterment-pdf-array-parser.js",
        "src/pdf_to_csv.js"     
      ]
    }
  ],
 "background": {
    "scripts": ["src/show_page_icon.js"],
    "persistent": false
  }, 
  "page_action": {
    "default_icon": {
      "38": "images/icon38.png"
    },
    "default_title": "Betterment PDF to CSV"
  },
  "permissions": ["declarativeContent"],
  "web_accessible_resources": [
    "libs/pdf.worker.js"
  ]
}
